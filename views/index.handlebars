<h1>Eat-Da-Burger</h1>
<div class="center">
<img src="/assets/img/burger.jpg" height="200">
</div>

<div class="col-md-6">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{this.burger_name}} <button data-id={{this.id}} class="devour btn btn-danger"> Devour! </button></li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-6">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit" id="addBurger">Submit</button>
<h5>Enter a burger you want to eat Click the "Submit" button.</h5>
</form>
